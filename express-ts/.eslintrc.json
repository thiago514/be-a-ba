{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript",
    "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "@typescript-eslint/strict-boolean-expressions": "warn",
        "@typescript-eslint/no-extraneous-class": "off",
        "indent": ["error", 4],
        "@typescript-eslint/indent": "off"
    }
}
